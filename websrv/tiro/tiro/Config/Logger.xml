<Logger>
<!-- valid replacements are 
     %ServerRoot% - MiServer root directory
     %SiteRoot%   - web site root -->
  <active>1</active>              <!-- 1 for yes, 0 for no -->
  <directory>%SiteRoot%\Logs</directory>
  <frequency>month</frequency>    <!-- valid options are daily, a day name (sunday-saturday), monthly, or empty -->
  <sizelimit>1e7</sizelimit> <!-- 0 for no limit -->
</Logger>